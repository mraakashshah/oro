# Use locally-built oro binary instead of stale go/bin copy
PATH_add .

# Auto-sync assets/ to ~/.oro/ when entering the oro repo directory
# Only runs on main branch to avoid worktree collisions

# Activate virtual environment if it exists
source .venv/bin/activate 2>/dev/null || true

# Run dev-sync only on main branch and only if assets/ exists
if [ "$(git branch --show-current)" = "main" ] && [ -d assets ]; then
  if command -v make >/dev/null 2>&1; then
    make dev-sync 2>&1 | tail -1
  fi
fi
