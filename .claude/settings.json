{
	"hooks": {
		"SessionStart": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/enforce-skills.sh"
					},
					{
						"type": "command",
						"command": "python3 .claude/hooks/session_start_extras.py",
						"statusMessage": "Loading project context..."
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "python3 .claude/hooks/inject_context_usage.py"
					}
				]
			},
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "python3 .claude/hooks/architect_router.py"
					},
					{
						"type": "command",
						"command": "python3 .claude/hooks/worktree_guard.py"
					},
					{
						"type": "command",
						"command": "python3 .claude/hooks/no_cd_guard.py"
					},
					{
						"type": "command",
						"command": "python3 .claude/hooks/rebase_worktree_guard.py"
					}
				]
			},
			{
				"matcher": "Read",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/oro-search-hook",
						"timeout": 5000,
						"statusMessage": "Searching codebase..."
					}
				]
			},
			{
				"matcher": "Task",
				"hooks": [
					{
						"type": "command",
						"command": "python3 .claude/hooks/enforce_worktree.py"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/auto-format.sh"
					}
				]
			},
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "python3 .claude/hooks/memory_capture.py"
					},
					{
						"type": "command",
						"command": "python3 .claude/hooks/learning_reminder.py"
					}
				]
			},
			{
				"matcher": "Task",
				"hooks": [
					{
						"type": "command",
						"command": "python3 .claude/hooks/validate_agent_completion.py"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/hooks/stop-checklist.sh"
					}
				]
			}
		]
	}
}
